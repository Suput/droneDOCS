:443 {
    root * /droneDOCS
    file_server
    tls internal {
        # Trick to use self-signed certificate inside Docker container
        # https://caddyserver.com/docs/caddyfile/directives/tls#on_demand
        # Security warning:
        # Doing so in production is INSECURE
        # unless you also configure the on_demand_tls global option to mitigate abuse.
        on_demand
        # Doing so in production is INSECURE
    }
}

:80 {
    # As we want https - redirect
    redir https://localhost:443{uri}
}
